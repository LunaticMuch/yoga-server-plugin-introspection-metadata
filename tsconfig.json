{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "es2020"
        ],
        "rootDirs": [
            "src"
        ],
        "target": "es2020",
        "outDir": "dist",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "module": "esnext",
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}